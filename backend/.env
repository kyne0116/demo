# 数据库连接信息
DB_HOST=10.92.82.149
DB_PORT=30004
DB_DATABASE=copyright
DB_USERNAME=copyrightusr
DB_PASSWORD=copyrightPWD@2025

# MySQL JDBC 连接参数 (对应Spring Boot中的useSSL=false&serverTimezone=Asia/Shanghai等)
